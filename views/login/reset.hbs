  <body class='d-flex flex-column h-100'>
    <main class='flex-shrink-0'>
      <div class='container'>
        <div class='card border-dark mb-3' style='max-width: 100%;'>
          <div class='card-header bg-transparent border-dark'>
            <h1>Nueva contraseña para ... </h1>
          </div>
          <div class='card-body text-dark'>
            <h5 class='card-title'>{{ email }}</h5>
            <p class='card-text'>
              <form id="editar_usuario" action="/login/reset?tokenparam={{token}}" method="post" class="aqui-token">

                <div class="row" style="padding-bottom: 15px;">
                  <div class="col-12">
                    <input type="password" name="password" class="form-control" required value="" required placeholder="Nueva contraseña">
                  </div>
                </div>

                <div class="row">
                  <div class="col-12">
                    <input type="password" name="repetir_password" class="form-control" required value="" required placeholder="Repetir contraseña">
                  </div>
                </div>
              </form>
            </p>
          </div>
          <div class='card-footer bg-transparent border-dark'>
            <button type="submit" form="editar_usuario" class="btn btn-success">Cambiar contraseña</button>
          </div>
        </div>
      </div>
    </main>

